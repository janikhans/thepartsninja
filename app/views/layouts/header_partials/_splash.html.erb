<section class="hero" id="intro">
  <div class="container">
    <div class="row  welcome">
      <div class="col-md-6 text-left">
        <div class="welcome-wrapper welcome-wrapper-left">
          <h1>Replacement part searching made easy</h1>
          <h3>Whatever you are looking for, the Parts NINJA will help you find it. The Parts NINJA cross references thousands of parts to find every possible option. </h3>
          <div class="btn btn-primary">Learn More</div>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-1">
        <div class="welcome-wrapper animated fadeInRight">
          <div class="ibox home-search-box">
            <div class="ibox-title">
              <%= image_tag("ThePartsNinja.png", class:"img-responsive") %>
            </div>
            <div class="ibox-content">
              <p class="text-center">What are you looking for?</p>
              <div class="search-form">
                <%= render 'searches/form' %>
              </div>
            </div>
            <div class="ibox-footer small-footer">
              By clicking Search, you agree to our <%= link_to "Terms", terms_of_service_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="gray-section">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="stats-box text-center">
          <div class="row">
            <div class="col-sm-3 col-xs-6">
              <h2>35,000</h2>
              <p class="text-muted">Vehicles</p>
            </div>
            <div class="col-sm-3 col-xs-6">
              <h2>300k</h2>
              <p class="text-muted">Parts</p>
            </div>
            <div class="col-sm-3 col-xs-6">
              <h2>742</h2>
              <p class="text-muted">Discoveries</p>
            </div>
            <div class="col-sm-3 col-xs-6">
              <h2 class="infinite">&infin;</h2>
              <p class="text-muted">Potentials</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
