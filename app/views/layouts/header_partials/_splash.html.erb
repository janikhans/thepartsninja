<section class="hero" id="intro">
  <div class="container">
    <div class="row welcome">
      <div class="col-md-7 text-left">
        <div class="welcome-wrapper welcome-wrapper-left">
          <h1>The Ultimate Motorsports Parts App</h1>
          <h3>Whatever you are looking for, the Parts Ninja will help you find it! The Parts Ninja cross references thousands of parts to find you every possible option. </h3>
          <a href="#about" class="btn btn-primary">Learn More</a>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-1">
        <div class="welcome-wrapper animated fadeInRight">
          <div class="ibox home-search-box">
            <div class="ibox-title">
              <%= image_tag("ThePartsNinjaLight.png", class:"img-responsive margin-auto") %>
            </div>
            <div class="ibox-content padding-fix">
              <p class="text-center">What are you looking for?</p>
              <div class="search-form">
                <%= simple_form_for :search, url: search_path, method: :get do |f| %>
                  <div class="row">
                    <%= f.input :year, class:"form-control", collection: 1955..2017, prompt: "Year...", label: false %>
                    <%= f.input :brand, placeholder: "Make...", class:"form-control", label: false %>
                    <%= f.input :model, placeholder: "Model...", class:"form-control", label: false %>
                    <%= f.input :part, placeholder: "What Part...", class:"form-control", label: false %>
                    <div class="text-center">
                      <%= link_to "Search", search_path, class:"btn btn-default submit-btn" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="ibox-footer small-footer">
              By clicking Search, you agree to our <%= link_to "Terms", terms_of_service_path, :target => "_blank" %>
           </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="gray-section">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="stats-box text-center">
          <div class="row">
            <div class="col-sm-4 col-xs-4">
              <h2>35,000+</h2>
              <p class="text-muted">Vehicles</p>
            </div>
            <div class="col-sm-4 col-xs-4">
              <h2>300k+</h2>
              <p class="text-muted">Parts</p>
            </div>
            <div class="col-sm-4 col-xs-4">
              <h2 class="infinite">&infin;</h2>
              <p class="text-muted">Potentials</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
