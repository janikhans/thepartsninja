<section class="hero" id="intro">
  <div class="container">
    <div class="welcome-header">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-5">
            <div class="animatedParent">
              <%= image_tag("ThePartsNinja.png", class:"img-responsive animated fadeInLeft") %>
              <p class="animated fadeInUp white text-center">Millions of options at your fingertips</p>
            </div>
          </div>
          <div class="col-md-7">
            <div class="ibox home-search-box">
              <div class="ibox-title">
                <h2 class="text-center">What are you looking for?</h2>
                <h3 class="text-center">Ask the Sensei!</h3>
              </div>
              <div class="ibox-content">
                <div class="search-form">
                  <%= render 'searches/form' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

