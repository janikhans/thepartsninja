<div class="card o-f-h">
  <div class="card-profile-bg"></div>
  <div class="card-body text-center">
    <div class="card-profile-image">
      <%= gravatar_for(current_user) %>
    </div>
    <div class="card-profile-username">
      <strong><%= current_user.username %></strong>!
    </div>
  </div>
  <div class="sidebar-menu">
    <ul class="nav">
      <%= nav_item(icon(:home) + " Dashboard", account_root_path) %>
      <%= nav_item(icon(:gears) + " Account Settings", account_settings_path) %>
    </ul>
  </div>
</div>
