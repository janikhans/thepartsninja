<% if current_user %>
    <%= render 'layouts/sidebar_nav' %>
<% else %>
  <div class="card o-f-h">
    <div class="card-profile-bg"></div>
    <div class="card-body text-center">
      <div class="card-profile-image">
        <%= image_tag("parts_ninja_dark_logo.png") %>
      </div>
      <div class="card-profile-username">
        Hey You! <strong>Yeah, YOU!</strong>
      </div>
      <p>
        You're currently viewing as a guest which is totally cool but if you sign up,
        you'll have access to the forums and the most recent updates as we continually
        build out The Parts Ninja parts project.
      </p>
      <div class="text-center btn-group">
        <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-default" %>
        <%= link_to "Sign In", new_user_session_path, class:"btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>
