<% content_for :header_topic do %>
  Part Compatibility Search
<% end %>
<% content_for :header do %>
  <%= render 'layouts/header_partials/default' %>
  <%= render 'layouts/header_partials/quicklinks' %>
<% end %>
<div class="row">
  <div class="col-md-9">
    <div id= "search-type-selection" class="m-b-md">
      <div class="topic-title">
        <h3>Search For Compatibilities <%= link_to icon(:refresh), refresh_buttons_search_path, remote: true %></h3>
      </div>
      <div id="search-form">
        <%= render 'form_buttons' %>
      </div>
    </div>
    <div id="compatibility-check-results">
      <div class="results-overview card">
        <h2 class="text-center">Begin your search above!</h2>
        <p class="text-center">Select the vehicles and that part that you want to check compatibility with.</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <%= render 'compatibility_checks/profile' %>
    <%= render 'layouts/ebay_results_sidebar' %>
  </div>
</div>
