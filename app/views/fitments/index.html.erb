<div class="col-md-12">
  <div id="nj-heading" class="nj-mat">
    <h1>Fitments</h1>
    <p>The Ninja database currently has <%= @fitments.count %> fitments.</p>
  </div>

  <div id="nj-content" class="nj-mat">
    <table class=" nj-table">
      <thead>
        <tr>
          <th>Vehicle</th>
          <th>Part</th>
          <th>OEM</th>
          <th>Verified</th>
          <th colspan="2"></th>
        </tr>
        <%= link_to 'New Fitment', new_fitment_path, class:"float-right btn nj-btn btn-thin" %>
      </thead>
      <tbody>
        <%= render @fitments %>
      </tbody>
    </table>
  </div>
</div>