<div class="row">
<div class="col-md-12">
  <div id="nj-heading" class="nj-mat">
    <h1>Parts</h1>
    <p>The Ninja database currently has <%= @parts.count %> parts.</p>
  </div>

  <div id="nj-content" class="nj-mat">
    <table class=" nj-table">
      <thead>
        <tr>
        <th>Product ID</th>
        <th>Part ID</th>
          <th>Brand</th>
          <th>Part Number</th>
          <th>Part Name</th>
          <th>Note</th>
          <th colspan="2"></th>
        </tr>
        <%= link_to 'New Part', new_part_path, class:"float-right btn nj-btn btn-thin" %>
      </thead>

      <tbody>
        <%= render @parts %>
      </tbody>
    </table>
  </div>
</div>
</div>
