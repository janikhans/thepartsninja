<p id="notice"><%= notice %></p>

<h1>Listing parts</h1>

<table>
  <thead>
    <tr>
      <th>Part number</th>
      <th>Vehicle</th>
      <th>Part</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.part_number %></td>
        <td><%= part.vehicle.brand.name %></td>
        <td><%= part.part.brand.name %></td>
        <% if part.user %>
          <td><%= part.user.username %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

