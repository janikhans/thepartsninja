<div class="middle-box text-center loginscreen animated fadeInUp">
    <div>
        <h3>Become a Ninja</h3>
        <p>Create an account to join the Dojo.</p>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
            <div class="form-group"><%= f.input :email, required: true, autofocus: true, placeholder: 'Email - example@example.com', input_html: { class: 'form-control' }, label: false %></div>
            <div class="form-group"><%= f.input :username, required: true, placeholder: 'Username', input_html: { class: 'form-control' }, label: false %></div>
            <div class="form-group"><%= f.input :password, required: true, placeholder: 'Password', input_html: { class: 'form-control' }, label: false %></div>
            <div class="form-group"><%= f.input :password_confirmation, required: true, placeholder: 'Password Confirmation', input_html: { class: 'form-control' }, label: false %></div>    
            <div class="form-group"><div class="checkbox"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div></div>

            <%= f.button :submit, "Sign up", class:"btn btn-primary block full-width m-b" %>
        <% end %>
        <p class="text-muted text-center"><small>Already have an account?</small></p>
            <%= link_to "Login", login_path, class:"btn btn-sm btn-white btn-block"  %>
        <p class="m-t"> <small>Welcome to the Dojo &copy; 2015</small> </p>
    </div>
</div>