<div class="accept-invitation">
  <div class="header">
    <%= image_tag("ThePartsNinjaDark.png", class:"img-responsive logo") %>
    <h4>Comfirm Your Invitation</h4>
    <p class="text-center">Please choose a Username (You can change it later) and a password.</p>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "user-form" }) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :confirmation_token %>
    <%= f.input :email, required: true, autofocus: true, wrapper_html: { class: "form-field" } %>
    <div class="checkbox special-action">
      <label><input type="checkbox"><i></i> Agree the terms and policy </label>
    </div>
    <div class="form-action">
      <%= f.button :submit, "Resend Confirmation", class:"btn-shadow btn-shadow-primary" %>
    </div>
  <% end %>
</div>
