<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="logo"><%= image_tag("ThePartsNinjaDark.png", class:"img-responsive") %></div>
    <div class="card user-card">
      <div class="card-header">
        <h3>Change your password</h3>
      </div>
      <div class="card-content">
        <p class="text-center">Please enter your new password and confirm it.</p>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <%= f.input :password, placeholder: "New password", label: false, required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control" %>
          <%= f.input :password_confirmation, placeholder: "Confirm your new password", label: false, required: true, class: "form-control" %>
          <%= f.button :submit, "Change my password", class:"btn btn-primary full-width m-b" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
