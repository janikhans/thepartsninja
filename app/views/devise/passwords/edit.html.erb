<div class="passwordBox animated fadeInDown">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox gray-box">
        <h2 class="font-bold">Change your password</h2>
        <p>Please enter your password and confirm it.</p>
        <div class="row">
          <div class="col-lg-12">
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>
              <div class="form-group">
                <%= f.input :reset_password_token, as: :hidden %>
                <%= f.full_error :reset_password_token %>
              </div>
              <div class="form-inputs">
                <%= f.input :password, placeholder: "New password", label: false, required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                <%= f.input :password_confirmation, placeholder: "Confirm your new password", label: false, required: true %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Change my password", class:"btn btn-primary block full-width m-b" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
