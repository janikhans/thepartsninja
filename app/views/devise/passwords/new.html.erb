<div class="password-reset">
  <div class="header">
    <%= link_to root_path do %>
      <div class="col-md-4 col-md-offset-4">
        <%= image_tag("parts_ninja_dark_logo.png", class:"img-responsive logo") %>
        <h2>The Parts Ninja</h2>
      </div>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-4 card">
    <div class="card-heading">
      <p>Enter your email address and reset instructions will be emailed to you.</p>
    </div>
    <div class="card-content">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "user-form"  }) do |f| %>
        <%= f.error_notification %>
          <%= f.input :email, required: true, autofocus: true, placeholder: "Your Email", label: false, wrapper_html: { class: "form-field" } %>
          <div class="form-action">
            <%= f.button :submit, "Reset Password", class:"btn-shadow btn-shadow-primary" %>
          </div>
          <div class="form-bottom">
            <%= link_to "Sign In", new_user_session_path %>
          </div>
      <% end %>
    </div>
  </div>
</div>
