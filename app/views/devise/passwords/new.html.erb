<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="logo"><%= image_tag("ThePartsNinjaDark.png", class:"img-responsive") %></div>
    <div class="card user-card">
      <div class="card-header">
        <h3>Forgot password?</h3>
      </div>
      <div class="card-content">
        <p class="text-center">Enter your email address and reset instructions will be emailed to you.</p>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
            <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
            <%= f.button :submit, "Send me reset password instructions", class:"btn btn-primary full-width m-b" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
