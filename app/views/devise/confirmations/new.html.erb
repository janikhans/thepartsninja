<div class="passwordBox">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox gray-box">
        <div class="logo"><%= image_tag("ThePartsNinja.png", class:"img-responsive") %></div>
        <h2 class="font-bold">Resend Confirmation</h2>
        <p>Enter your email address and a new confirmation link will be emailed to you.</p>
        <div class="row">
          <div class="col-lg-12">
            <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
              <%= f.error_notification %>
              <%= f.full_error :confirmation_token %>
              <div class="form-inputs">
                <%= f.input :email, required: true, autofocus: true %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Resend Confirmation", class:"btn full-width m-b" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
