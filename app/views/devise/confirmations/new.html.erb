<div class="resend-confirmation">
  <div class="header">
    <%= link_to root_path do %>
      <%= image_tag("parts_ninja_dark_logo.png", class:"img-responsive logo") %>
      <h2>The Parts Ninja</h2>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-4 card">
    <div class="card-heading">Enter your email address and a new confirmation link will be emailed to you.</div>
    <div class="card-content">
      <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "user-form" }) do |f| %>
        <%= f.error_notification %>
        <%= f.full_error :confirmation_token %>
        <%= f.input :email, required: true, autofocus: true, wrapper_html: { class: "form-field" } %>
        <div class="form-action">
          <%= f.button :submit, "Resend Confirmation", class:"btn-shadow btn-shadow-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
