<div class="signin">
  <div class="header">
    <%= image_tag("ThePartsNinjaDark.png", class:"img-responsive logo") %>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "user-form" }) do |f| %>
    <%= f.input :login, required: true, autofocus: true, label: false, placeholder: 'Email or Username', wrapper_html: { class: "form-field" }  %>
    <%= f.input :password, required: true, label: false, placeholder: 'Password', wrapper_html: { class: "form-field" } %>
    <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'special-action' } if devise_mapping.rememberable? %>
    <div class="form-action">
      <%= f.button :submit, "Log In", class:"btn-shadow btn-shadow-primary" %>
    </div>
    <div class="form-bottom">
      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end %>
    </div>
    <div class="form-bottom">
      Don't have an account yet? <a href="">Sign up</a>
    </div>
  <% end %>
</div>
