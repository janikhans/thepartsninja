

<div class="row m-t-lg">
  <div class="col-lg-12  animated fadeInRight">  
    <div class="ibox">
        <div class="ibox-title">
          <h5>Listing All Brands</h5>
          <div class="ibox-tools">
            <%= link_to 'New Brand', new_brand_path %>
          </div>
        </div>
        <div class="ibox-content p-m">
          <% @brands.each do |brand, brand_array|  %>
            <div class="row brand">
              <div class="title">
                <h1><%= brand%></h1>
              </div>
              <div class="brands-list">
                <% brand_array.each do |brand|  %>
                  <div class="col-xs-2">
                    <%= link_to "#{brand.name}", brand %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>

