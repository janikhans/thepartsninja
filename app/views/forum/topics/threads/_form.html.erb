<%= simple_form_for @thread, url: forum_topic_threads_path(@topic) do |f| %>
  <%= f.input :title, label: false, placeholder: "Title" %>
  <%= f.input :body, label: false, placeholder: "Body", input_html: { rows: 10 } %>
  <div class="form-actions">
    <%= f.button :submit, "Create Thread" %>
  </div>
<% end %>
