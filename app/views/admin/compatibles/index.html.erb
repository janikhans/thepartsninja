<p id="notice"><%= notice %></p>

<h1>Listing Compatibles</h1>

<table>
  <thead>
    <tr>
      <th>Original</th>
      <th>Replaces</th>
      <th>Discovery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compatibles.each do |compatible| %>
      <tr>
        <td><%= compatible.part_id %></td>
        <td><%= compatible.compatible_part_id %></td>
        <td><%= compatible.discovery_id %></td>
        <td><%= link_to 'Show', admin_compatible_path(compatible) %></td>
        <td><%= link_to 'Edit', edit_admin_compatible_path(compatible) %></td>
        <td><%= link_to 'Destroy', admin_compatible_path(compatible), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Compatible', new_admin_compatible_path %>


<div class="panel-body no-padding">
    <% if @compatibles.any? %>
      <%= render partial: 'compatibles/compatible', collection: @compatibles %>
    <% else %>
    <div class="search-box-padding">
      <h5 class="text-center">No Compatibles Were Found...</h5>
    </div>
    <% end %>
</div>
