<% provide(:header, "Compatibles") %>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Showing all Compatibles <%= link_to "New Compatible", new_admin_compatible_path %>
          </div>
          <div class="panel-body">
              <div class="dataTable_wrapper">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-compatibles">
                      <thead>
                          <tr>
                              <th>Compatible ID</th>
                              <th>Score</th>
                              <th>Part</th>
                              <th>Compatible Part</th>
                              <th>Discovery</th>
                              <th>Modifications</th>
                              <th></th>
                              <th></th>
                              <th></th>
                          </tr>
                      </thead>
                      <tbody>
                          <%= render partial: 'admin/compatibles/compatible', collection: @compatibles %>
                      </tbody>
                  </table>
              </div>
              <%= paginate @compatibles %>
          </div>
      </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('#dataTables-compatibles').DataTable({
        responsive: true,
        "aaSorting": [],
        "paging": false,
      });
  });
</script>
