<% provide(:header, "Category: #{@category.name}") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-body">
          <div class="action-btns pull-right">
            <%= link_to 'Edit', edit_admin_category_path(@category) %>
          </div>
          <p>
            <strong>Category Breadcrumb:</strong>
            <% if @category.parent_category && @category.parent_category.parent_category %>
              <%= @category.parent_category.parent_category.name %> <
            <% end %>
            <% if @category.parent_category %>
              <%= @category.parent_category.name  %> <
            <% end %>
            <%= @category.name %>
          </p>
          <h2>Stats</h2>
          <p><strong>Products:</strong><%= @category.products.count %></p>
          <p><strong>Parts:</strong><%= @category_parts_count %></p>
          <p><strong>Total Imported:</strong><%= @imported_parts_count %></p>
          <p><strong>Needing Import:</strong><%= @need_imported_parts_count %></p>
          <h3>Product Types</h3>
          <ul>
            <% @category.product_types.each do |type| %>
              <li><%= type.name %></li>
            <% end %>
          </ul>

        </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        Product Listing
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-products">
            <thead>
              <tr>
                <th>Brand</th>
                <th>Product Name</th>
                <th>Product Type</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= product.brand.name %></td>
                  <td><%= product.name %></td>
                  <td><%= product.product_type.try(:name) %></td>
                  <td><%= link_to 'View', admin_product_path(product) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>


<script>
  $(document).ready(function() {
      $('#dataTables-products').DataTable({
        responsive: true,
        "aaSorting": [],
        "paging": false
      });
  });
</script>
