<%= simple_form_for([:admin, @category]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :parent_id, collection: Category.first.children, as: :grouped_select, group_method: :subtree %>
    <div class="cb"></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
