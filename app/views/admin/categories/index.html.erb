<% provide(:header, "Categories") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            New Category
        </div>
        <div class="panel-body">
            <%= render 'form' %>
        </div>
    </div>
  </div>
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Showing all Categories
          </div>
          <div class="panel-body">
            <%= nested_categories @categories.arrange(order: :name) %>
          </div>
      </div>
  </div>
</div>
