<% provide(:header, "Searches") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Showing most recent searches
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-searches">
                    <thead>
                        <tr>
                          <th>ID</th>
                          <th>Vehicle ID</th>
                          <th>Year</th>
                          <th>Brand</th>
                          <th>Model</th>
                          <th>Part</th>
                          <th>User</th>
                          <th>Date</th>
                          <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render partial: 'admin/searches/search', collection: @searches %>
                    </tbody>
                </table>
            </div>
            <%= paginate @searches %>
        </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('#dataTables-searches').DataTable({
        responsive: true,
        "aaSorting": [],
        "paging": false
      });
  });
</script>
