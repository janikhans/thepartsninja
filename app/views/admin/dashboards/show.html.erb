<% provide(:header, "Dashboard") %>
<div class="row">
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <%= icon(:user_plus, class: "fa-5x") %>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @recent_users %></div>
            <div>Users</div>
          </div>
        </div>
      </div>
      <%= link_to admin_users_path do %>
        <div class="panel-footer">
          <span class="pull-left">Today...</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-red">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <%= icon(:search, class: "fa-5x") %>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @recent_searches %></div>
            <div>Searches</div>
          </div>
        </div>
      </div>
      <%= link_to admin_search_records_path do %>
        <div class="panel-footer">
          <span class="pull-left">Today...</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-yellow">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <%= icon(:comments, class: "fa-5x") %>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @recent_forum_posts.total_count %></div>
            <div>Forum Posts</div>
          </div>
        </div>
      </div>
      <%= link_to forum_root_path do %>
        <div class="panel-footer">
          <span class="pull-left">In the last 24 hours...</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-green">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <%= icon(:address_card, class: "fa-5x") %>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @recent_leads %></div>
            <div>Leads</div>
          </div>
        </div>
      </div>
      <%= link_to admin_leads_path do %>
        <div class="panel-footer">
          <span class="pull-left">Today...</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-4">
    <%= render 'recent_forum_activity' %>
    <%= render 'vehicle_types' %>
  </div>
  <div class="col-lg-8">
    <%= render 'search_volume' %>
    <%= render 'search_categories' %>
  </div>
</div>
