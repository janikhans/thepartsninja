<% provide(:header, "Discoveries") %>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Showing all Discoveries
          </div>
          <div class="panel-body">
              <div class="dataTable_wrapper">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-discoveries">
                      <thead>
                          <tr>
                              <th>Discovery ID</th>
                              <th>User</th>
                              <th>Compatibles Count</th>
                              <th>Modifications</th>
                              <th>Steps Count</th>
                              <th></th>
                              <th></th>
                              <th></th>
                          </tr>
                      </thead>
                      <tbody>
                          <%= render partial: 'admin/discoveries/discovery', collection: @discoveries %>
                      </tbody>
                  </table>
              </div>
              <%= paginate @discoveries %>
          </div>
      </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('#dataTables-discoveries').DataTable({
        responsive: true,
        "aaSorting": [],
        "paging": false
      });
  });
</script>
