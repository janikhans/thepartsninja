<p id="notice"><%= notice %></p>

<h1>Forum Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forum_topics.each do |forum_topic| %>
      <tr>
        <td><%= forum_topic.title %></td>
        <td><%= link_to 'Show', admin_forum_topic_path(forum_topic) %></td>
        <td><%= link_to 'Edit', edit_admin_forum_topic_path(forum_topic) %></td>
        <td><%= link_to 'Destroy', admin_forum_topic_path(forum_topic), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Forum Topic', new_admin_forum_topic_path %>
