<%= simple_form_for([:admin, @forum_topic]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :icon %>
    <%= f.input :private %>
    <%= f.input :parent_id, collection: ForumTopic.roots %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
