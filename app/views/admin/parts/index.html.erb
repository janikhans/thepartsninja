<% provide(:header, "Parts") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            New Part
        </div>
        <div class="panel-body">
            <%= render 'admin/parts/form' %>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            Showing all Parts
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-parts">
                    <thead>
                        <tr>
                            <th>Brand</th>
                            <th>Category</th>
                            <th>Part Name</th>
                            <th>Part Number</th>
                            <th>Attributes</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render partial: 'admin/parts/part', collection: @parts %>
                    </tbody>
                </table>
            </div>
            <%= paginate @parts %>
        </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('#dataTables-parts').DataTable({
        responsive: true,
        "aaSorting": [],
        "paging": false
      });
  });
</script>
