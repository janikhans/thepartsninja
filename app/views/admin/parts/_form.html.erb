<%= simple_form_for([:admin, @part]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :part_number %>
    <%= f.input :note %>
    <%= f.association :product, label_method: :to_label %>
    <div id="part_traits">
      <h3>What are some of the part Attributes?</h3>
      <%= f.simple_fields_for :part_traits do |part_trait| %>
        <%= render 'part_trait_fields', f: part_trait %>
      <% end %>
        <div class="links">
          <%= link_to_add_association 'Add Attribute', f, :part_traits %>
        </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
