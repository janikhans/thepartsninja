<%= simple_form_for([:admin, @part]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :part_number %>
    <%= f.input :note %>
    There needs to be a way to select the Product here.
    <%#= f.association :product, label_method: :to_label %>
    <div id="part_attributions">
      <h3>What are some of the part Attributes?</h3>
      <%= f.simple_fields_for :part_attributions do |part_attribution| %>
        <%= render 'part_attribution_fields', f: part_attribution %>
      <% end %>
        <div class="links">
          <%= link_to_add_association 'Add Attribute', f, :part_attributions %>
        </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
