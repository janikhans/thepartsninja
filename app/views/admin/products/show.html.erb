<% provide(:header, "#{@product.brand.name} #{@product.name}") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-body">
          <div class="action-btns pull-right">
            <%= link_to "Update Fitments", update_ebay_fitments_admin_product_path(@product) %> |
            <%= link_to 'Edit', edit_admin_product_path(@product) %>
          </div>
          <h3>Brand:<small> <%= link_to @product.brand.name, admin_brand_path(@product.brand) %></small> </h3>
          <h3>Product Name:<small> <%= @product.name %></small></h3>
          <h3>Category:<small> <%= @product.category.parent_category.name if @product.category.parent_category %> - <%= @product.category.name %></small></h3>
          <h3>Product Type:<small> <%= @product.product_type ? @product.product_type.name : (link_to "Add Product Type", edit_admin_product_path(@product)) %></small></h3>
          <h3>Description:</h3>
          <small> <%= @product.description %> </small>
        </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        Parts Listing
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-parts">
            <thead>
              <tr>
                <th>Part Number</th>
                <th># Fitments</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @parts.each do |part| %>
                <tr>
                  <td><%= part.part_number %></td>
                  <td><%= part.fitments.count %></td>
                  <td><%= link_to 'View', admin_part_path(part) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= paginate @parts %>
      </div>
    </div>
  </div>
</div>


<script>
  $(document).ready(function() {
      $('#dataTables-parts').DataTable({
        responsive: true,
        "aaSorting": [],
        "paging": false
      });
  });
</script>
