<ul>
<% subcategories.order(name: :asc).each do |sub| %>
<li>
<%= sub.name %> <%= link_to "Show", admin_ninja_category_path(sub), class: "hover-link" %>
<%= render partial: 'admin/ninja_categories/subcategory', locals: {subcategories: sub.subcategories} if sub.subcategories.present? %>
</li>
<% end %>
</ul>
