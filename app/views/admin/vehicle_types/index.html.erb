<% provide(:header, "Vehicle Types") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            New Vehicle Type
        </div>
        <div class="panel-body">
            <%= render 'admin/vehicle_types/form' %>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            Showing all Vehicle Types
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-vehicle-types">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render partial: 'admin/vehicle_types/vehicle_type', collection: @vehicle_types %>
                    </tbody>
                </table>
            </div>
            <%= paginate @vehicle_types %>
        </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('#dataTables-vehicle-types').DataTable({
        responsive: true,
        "aaSorting": [],
        "paging": false
      });
  });
</script>
