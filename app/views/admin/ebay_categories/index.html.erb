<% provide(:header, "Ebay Categories") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        New Ebay Category
      </div>
      <div class="panel-body">
        <%= render 'form' %>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
            Showing all Ebay Categories
          </div>
          <div class="panel-body">
            <% @ebay_categories.each do |ebay_category| %>
            <ul>
            <% if ebay_category.parent_id.blank? %>
            <li><%= ebay_category.name %> <%= link_to "Edit", edit_admin_ebay_category_path(ebay_category)%> <%= link_to "Delete", admin_ebay_category_path(ebay_category), method: 'delete', data: { confirm: 'Are you sure?' } %>
            <%= render partial: 'subcategory', locals: {subcategories: ebay_category.subcategories} if ebay_category.subcategories.present? %>
            </li>
            <% end %>
            </ul>
            <% end %>
          </div>
      </div>
  </div>
</div>
