<% provide(:header, "Ebay Categories") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        New Ebay Category
      </div>
      <div class="panel-body">
        <%= render 'form' %>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
            Showing all Ebay Categories
          </div>
          <div class="panel-body">
            <ul>
              <%#= render @ebay_categories %>
            </ul>
            <%= nested_categories @ebay_categories.arrange(order: :name) %>
          </div>
      </div>
  </div>
</div>
