<% provide(:header, "Ebay Category: #{@ebay_category.name}") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-body">
          <div class="action-btns pull-right">
            <%= link_to 'Edit', edit_admin_ebay_category_path(@ebay_category) %>
          </div>
          <p><%= category_breadcrumb(@ebay_category) unless @ebay_category.depth == 0 %></p>
          <p><strong>Products:</strong><%= @ebay_category.products.count %></p>
          <p><strong>Parts:</strong><%= @ebay_category_parts_count %></p>
          <p><strong>Total Imported:</strong><%= @imported_parts_count %></p>
          <p><strong>Needing Import:</strong><%= @need_imported_parts_count %></p>
        </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        Product Listing
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-products">
            <thead>
              <tr>
                <th>Brand</th>
                <th>Product Name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= product.brand.name %></td>
                  <td><%= product.name %></td>
                  <td><%= link_to 'View', admin_product_path(product) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>


<script>
  $(document).ready(function() {
      $('#dataTables-products').DataTable({
        responsive: true,
        "aaSorting": [],
        "paging": false
      });
  });
</script>
