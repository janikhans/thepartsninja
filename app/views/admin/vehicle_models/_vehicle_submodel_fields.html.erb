<div class="nested-fields">
  <%= f.input :name, placeholder: 'Submodel Name' %>
  <%= link_to_remove_association "remove submodel", f %>
  <div class="vehicles">
    <%= f.simple_fields_for :vehicles do |vehicle| %>
      <%= render 'vehicle_fields', f: vehicle %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add Vehicle', f, :vehicles %>
    </div>
  </div>
</div>
