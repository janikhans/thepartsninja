<% provide(:header, "Search History") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Showing most recent searches
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-searches">
                    <thead>
                        <tr>
                          <th>Vehicle</th>
                          <th>Comparing Vehicle</th>
                          <th>Category Name</th>
                          <th>Existing Category</th>
                          <th>Fitment Note</th>
                          <th>Results</th>
                          <th>User</th>
                          <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render @search_records %>
                    </tbody>
                </table>
            </div>
            <%= paginate @search_records %>
        </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('#dataTables-searches').DataTable({
        responsive: true,
        "aaSorting": [],
        "paging": false
      });
  });
</script>
