<% provide(:header, "Fitments") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            New Fitment
        </div>
        <div class="panel-body">
            <%= render 'admin/fitments/form' %>
        </div>
    </div>
      <div class="panel panel-default">
          <div class="panel-heading">
              Showing all Fitments
          </div>
          <div class="panel-body">
              <div class="dataTable_wrapper">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-fitments">
                      <thead>
                          <tr>
                            <th>Product</th>
                            <th>Part Number</th>
                            <th>Product Category</th>
                            <th>Vehicle Year</th>
                            <th>Vehicle Make</th>
                            <th>Vehicle Year</th>
                            <th></th>
                            <th></th>
                            <th></th>
                          </tr>
                      </thead>
                      <tbody>
                          <%= render partial: 'admin/fitments/fitment', collection: @fitments %>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('#dataTables-fitments').DataTable({
              responsive: true
      });
  });
</script>
