<% provide(:header, "Leads") %>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Showing all Leads
          </div>
          <div class="panel-body">
              <div class="dataTable_wrapper">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-leads">
                      <thead>
                          <tr>
                              <th>Email</th>
                              <th>Cars/Trucks</th>
                              <th>Dirtbikes</th>
                              <th>Streetbikes</th>
                              <th>ATVs</th>
                              <th></th>
                          </tr>
                      </thead>
                      <tbody>
                          <%= render partial: 'admin/leads/lead', collection: @leads %>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('#dataTables-leads').DataTable({
              responsive: true
      });
  });
</script>
