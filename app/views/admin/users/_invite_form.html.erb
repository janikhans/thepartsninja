<h2><%= t "devise.invitations.new.header" %></h2>

<%= simple_form_for new_resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post} do |f| %>
  <%= devise_error_messages! %>

<% new_resource.class.invite_key_fields.each do |field| -%>
  <%= f.input field, label: false, placeholder: 'Email' %>
<% end -%>

<%= f.button :submit, t("devise.invitations.new.submit_button") %>
<% end %>
