<% provide(:header, "Compatibilities") %>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Showing all Compatibilities <%= link_to "New Compatibility", new_admin_compatibility_path %>
          </div>
          <div class="panel-body">
              <div class="dataTable_wrapper">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-compatibilities">
                      <thead>
                          <tr>
                              <th>Compatibility ID</th>
                              <th>Score</th>
                              <th>Part</th>
                              <th>Compatible Part</th>
                              <th>Discovery</th>
                              <th>Modifications</th>
                              <th>Backwards Compatible</th>
                              <th></th>
                              <th></th>
                              <th></th>
                          </tr>
                      </thead>
                      <tbody>
                          <%= render partial: 'admin/compatibilities/compatibility', collection: @compatibilities %>
                      </tbody>
                  </table>
              </div>
              <%= paginate @compatibilities %>
          </div>
      </div>
  </div>
</div>

<script>
  $(document).ready(function() {
      $('#dataTables-compatibilities').DataTable({
        responsive: true,
        "aaSorting": [],
        "paging": false,
      });
  });
</script>
