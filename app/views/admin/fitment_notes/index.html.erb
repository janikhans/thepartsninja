<% provide(:header, "Fitment Notes") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            New Fitment Note
        </div>
        <div class="panel-body">
            <%= render 'admin/fitment_notes/form' %>
        </div>
    </div>
  </div>
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Showing all Fitment Notes
          </div>
          <div class="panel-body">
            <% @fitment_notes.each do |fitment_note| %>
              <ul>
                <% if fitment_note.parent_id.blank? %>
                  <li><%= fitment_note.name %> <%= link_to "Edit", edit_admin_fitment_note_path(fitment_note)%>
                    <%= render partial: 'variation', locals: {note_variations: fitment_note.note_variations} if fitment_note.note_variations.present? %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </div>
      </div>
  </div>
</div>
