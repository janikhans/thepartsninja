      <div class="col-lg-6">
        <div class="ibox">
          <div class="ibox-title">
            Subscribe!
          </div>
          <div id="emailForm" class="ibox-content">
            <%= render 'leads/form' %>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="navy-line"></div>
