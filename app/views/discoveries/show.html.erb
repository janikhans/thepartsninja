<p>
  <strong>Comment:</strong>
  <%= @discovery.comment %>
</p>

<p>
  <strong>Modifications:</strong>
  <%= @discovery.modifications %>
</p>

<%= link_to 'Edit', edit_discovery_path(@discovery) %> |
<%= link_to 'Back', discoveries_path %>

<div class="wrapper wrapper-content animated fadeIn">
  <div class="row">
      <div class="col-lg-9">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>This Part<small class="m-l-sm">(This was original)</small></h5>
              </div>
              <div class="ibox-content">
                <% @discovery.fitments.each do |f| %>
                  <h2 >
                      <%= f.part.product.brand.name %> <%= f.part.product.name %><br/>
                  </h2>
                  <p>
                     <strong>Part Number: </strong><%= link_to "#{f.part.part_number}", f.part %> <strong>From: </strong> <%= f.vehicle.year %> <%= f.vehicle.brand.name %> <%= f.vehicle.model %></p>
                  <p>
                <% end %>
              </div>
          </div>
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Fits These Vehicles</h5>
              </div>
              <div class="ibox-content">
                <div class="row">
                  <% @discovery.compatible_fitments.each do |f| %>
                    <div class="col-md-6 col-sm-6">
                      <div class="discovery-vehicle-title">
                        <%= f.vehicle.year %> <%= f.vehicle.brand.name %> <%= f.vehicle.model%>
                      </div>
                      <div class="sub-heading">
                          <i class="fa fa-gears"></i><strong> Replaces:</strong> <%= f.part.product.name %>
                      </div>
                    </div>
                  <% end %>
                  <div class="col-md-6 col-sm-6">
                      <div class="discovery-vehicle-title">
                        2007 Yamaha WR250
                      </div>
                      <div class="sub-heading">
                          <i class="fa fa-gears"></i><strong> Replaces:</strong> Front Wheel
                      </div>
                  </div>
                </div>
              </div>
          </div>
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Additional Information</h5>
              </div>
              <div class="ibox-content">
                  <h3>Comment:</h3>
                  <p><%= @discovery.comment %></p>
                  <p><strong>Modfifications:</strong> <%= @discovery.modifications %></p>
              </div>
          </div>
      </div>
      <div class="col-lg-3">
          <div class="widget-head-color-box navy-bg p-lg text-center">
            <div class="m-b-md">
                <h2 class="font-bold no-margins">
                    <%= @user.username %>
                </h2>
                <small>Founder of Groupeq</small>
            </div>
            <%= gravatar_for(@user) %>
            <div>
                <span>100 Tweets</span> |
                <span>350 Following</span> |
                <span>610 Followers</span>
            </div>
        </div>
        <div class="widget-text-box">
            <div class="text-center">
              <%= link_to "Message", @user, class:"btn btn-outline btn-primary" %> | <%= link_to "Profile", @user, class:"btn btn-outline btn-primary"  %>
            </div> 
        </div>
      </div>
  </div>
</div>
