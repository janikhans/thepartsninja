<div class="vote-item compatibility">
  <div class="row">
    <div class="col-md-1 col-xs-1">
        <div class="vote-actions">
          <%= vote_actions(compatibility) %>
        </div>
    </div>
    <div class="col-md-5 col-xs-5 text-left">
        <div class="part">
          <%= compatibility.part.product.brand.name %> <%= compatibility.part.product.name %>
        </div>
        <div class="part-info">
            <%= link_to('Vehicles +', '#', 'data-toggle': "popover", title: "Built for...", 'data-placement': "bottom", 'data-html': true, 'data-content': "#{vehicle_list(compatibility.part)}") %>
            PN: <%= link_to "#{compatibility.part.part_number}", compatibility.part %>
        </div>
    </div>
    <div class="col-md-1 col-xs-1">
        <div class="backwards">
          <%= backwards(compatibility) %>
        </div>
    </div>
    <div class="col-md-5 col-xs-5 text-right">
        <div class="part">
          <%= compatibility.compatible_part.product.brand.name %> <%= compatibility.compatible_part.product.name %>
        </div>
        <div class="part-info">
            <%= link_to('Vehicles +', '#', 'data-toggle': "popover", title: "Built for...", 'data-placement': "bottom", 'data-html': true, 'data-content': "#{vehicle_list(compatibility.compatible_part)}") %>
            PN: <%= link_to "#{compatibility.compatible_part.part_number}", compatibility.compatible_part %>
        </div>
    </div>
  </div>
</div>
